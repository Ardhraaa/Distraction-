// Create popup container
const popup = document.createElement("div");
popup.className = "insta-popup";

// Add image
const img = document.createElement("img");
img.src = chrome.runtime.getURL("stop.jpg");
popup.appendChild(img);

// Add text
const text = document.createElement("p");
text.innerText = "KYU NAHI HO RAHI PADHAI?";
popup.appendChild(text);

// Add to body
document.body.appendChild(popup);

// Add audio AFTER popup is added
const audio = new Audio(chrome.runtime.getURL("pop.mp3"));
audio.load(); // Preload it

popup.addEventListener("click", () => {
  audio.play().catch(err => {
    console.error("Autoplay blocked or failed:", err);
  });

  